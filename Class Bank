
#include <iostream>
using namespace std;
class Bank 
{
    int acno;
    char name[30];
    float bal;
    public: 
    void input()
    {
        cout<<"Enter account number: ";
        cin>>acno;
        cout<<"Enter name of account holder:";
        cin>>name;
        cout<<"Enter balance:";
        cin>>bal;
    }
    void show()
    {
        cout<<"Account no. is "<<acno<<"\nName is "<<name<<"\nBalance is "<<bal<<" rs."<<endl;
    }
    float getBal()
    {
        return bal;
    }
    char* getName()
    {
        return name;
    }
    void setBal(float balance)
    {
        bal=balance;
    }
    void Deposit()
    {
        int amt;
        cout<<"Enter amount to be deposited: ";
        cin>>amt;
        setBal(getBal()+amt);
        cout<<" âœ“ Amount deposited successfully!\n";
        show();
    }
    void withdraw()
    {
        int amt;
        cout<<"Enter amount to be withdrawn: ";
        cin>>amt;
        if(getBal()<amt)
        {
            cout<<"Not enough money in the account!";
        }
        else{
            setBal(getBal()-amt);
            show();
        }
        cout<<"\nThank You!ðŸ˜Š";
    }
};

int main() {
    Bank a;
    int num;
    cout<<"Press 1- Show account status\n"<<"Press 2- Deposit Money in the account\n"<<"Press 3- Withdraw Money from the account\n";
    cin>>num;
    switch (num)
    {
        case 1:
        a.input();
        a.show();
        break;
        case 2:
        a.input();
        a.Deposit();
        break;
        case 3:
        a.input();
        a.withdraw();
        break;
        default:
        cout<<"Invalid entry!";
      }
      return 0;
}

