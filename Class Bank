#include <iostream>
using namespace std;
class Bank 
{
    int acno;
    char name[30];
    float bal;
    public: 
    void input()
    {
        cout<<"Enter account number: ";
        cin>>acno;
        cout<<"Enter name of account holder:";
        cin>>name;
        cout<<"Enter balance:";
        cin>>bal;
    }
    void show()
    {
        cout<<" Account no. is "<<acno<<"\n Name is "<<name<<"\n Balance is "<<bal<<" rs."<<endl;
    }
    float getBal()
    {
        return bal;
    }
    char* getName()
    {
        return name;
    }
    void setBal(float balance)
    {
        bal=balance;
    }
    void Deposit()
    {
        int amt;
        cout<<"Enter amount to be deposited: ";
        cin>>amt;
        setBal(getBal()+amt);
        cout<<" âœ“ Amount deposited successfully!\n";
        show();
    }
    void withdraw()
    {
        int amt;
        cout<<"Enter amount to be withdrawn: ";
        cin>>amt;
        if(getBal()<amt)
        {
            cout<<"Not enough money in the account!";
        }
        else{
            setBal(getBal()-amt);
            show();
        }
        cout<<"\nThank You!ðŸ˜Š";
    }
};

int main() {
    
    Bank a;
    a.input();
    a.show();
    a.Deposit();
    a.withdraw();
   
    

    return 0;
}
